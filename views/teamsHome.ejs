      <div class="h-100 w-100 d-flex align-items-center flex-column mt-5">
          <div class="">
              <h3>Welcome  <%- name1 %>! </h3>
          </div>
          <div class="d-flex">
            <div class="card shadow mt-5" style="width: 15vw; height: 20vh;">
                <a href="/callWait" class="card-img-top text-center mt-4 flex-grow-1">
                    <i class="fas fa-phone-alt" style="font-size: 300%;"></i>
                </a>
                <h6 class="card-body text-center">Call</h6>
              </div>
              <div class="card shadow m-5" style="width: 15vw; height: 20vh;">
                <a href="/chat" class="card-img-top text-center mt-4 flex-grow-1">
                    <i class="fas fa-comments" style="font-size: 300%;"></i>
                </a>
                <h6 class="card-body text-center">Chat</h6>
              </div>    
          </div>
          
      </div>
      
</body>
